<Window x:Class="ContentManager.GUI.UIDebug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UIDebug" Height="300" Width="573">
    <Grid>
        <TabControl>
            <TabItem Header="Debug">
                <ListBox x:Name="errorlist" Background="LightGray" />            
            </TabItem>
            <TabItem Header="Swimming" Name="SwimmingTab">
                <ListBox x:Name="swimmingList" Background="LightGray" />
                
            </TabItem>

            <TabItem Header="Swimming Details" Name="SwimmingTab2" IsSelected="True">
                <DataGrid x:Name="swimmingGrid" AutoGenerateColumns="False">

                </DataGrid>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
